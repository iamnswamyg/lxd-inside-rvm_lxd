/var/log/syslog
{
	rotate 7
	hourly
	size 100M
	missingok
	notifempty
	delaycompress
	compress
	postrotate
{%- if grains['osfinger'] == 'Ubuntu-18.04' %}
		/usr/lib/rsyslog/rsyslog-rotate
{%- else %}
		reload rsyslog >/dev/null 2>&1 || true
{%- endif %}
	endscript
}

